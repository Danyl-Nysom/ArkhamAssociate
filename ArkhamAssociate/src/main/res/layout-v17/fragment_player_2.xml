<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:id="@+id/staminaLabel"
            android:text="Stamina" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:id="@+id/sanityLabel"
            android:text="Sanity"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/staminaLabel" />

        <Button
            android:layout_below="@id/staminaLabel"
            android:id="@+id/stamina"
            android:layout_alignStart="@id/staminaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:onClick="showChangeValuePopup"
            android:textColor="#000000"
            android:background="@drawable/heart" />

        <Button
            android:layout_below="@id/sanityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sanity"
            android:layout_alignStart="@id/sanityLabel"
            android:text="@string/loading"
            android:onClick="showChangeValuePopup"
            android:textColor="#000000"
            android:background="@drawable/brain" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignParentEnd="true"
            android:id="@+id/moneyLabel"
            android:text="Money" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moneyLabel"
            android:layout_alignEnd="@id/moneyLabel"
            android:id="@+id/money"
            android:text="@string/loading"
            android:onClick="showChangeValuePopup"
            android:textColor="#000000"
            android:background="@drawable/bill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_toStartOf="@id/moneyLabel"
            android:id="@+id/clueLabel"
            android:layout_marginEnd="30dp"
            android:text="Clue Tokens" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clueLabel"
            android:layout_alignEnd="@id/clueLabel"
            android:id="@+id/clues"
            android:text="@string/loading"
            android:onClick="showChangeValuePopup"
            android:textColor="#000000"
            android:background="@drawable/clue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stamina"
            android:layout_marginTop="30dp"
            android:id="@+id/speedLabel"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_centerInParent="true"
            android:text="Speed:Sneak" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/speedLabel"
            android:layout_centerInParent="true"
            android:id="@+id/speedGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/speed1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/speed2"
                android:layout_toEndOf="@id/speed1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/speed3"
                android:layout_toEndOf="@id/speed2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:id="@+id/speed4"
                android:layout_toEndOf="@id/speed3" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fightLabel"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_centerInParent="true"
            android:layout_below="@id/speedGroup"
            android:text="Fight:Will" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/fightLabel"
            android:layout_centerInParent="true"
            android:id="@+id/fightGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fight1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fight2"
                android:layout_toEndOf="@id/fight1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fight3"
                android:layout_toEndOf="@id/fight2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:id="@+id/fight4"
                android:layout_toEndOf="@id/fight3" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loreLabel"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_centerInParent="true"
            android:layout_below="@id/fightGroup"
            android:text="Lore:Luck" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/loreLabel"
            android:layout_centerInParent="true"
            android:id="@+id/loreGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lore1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lore2"
                android:layout_toEndOf="@id/lore1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lore3"
                android:layout_toEndOf="@id/lore2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:id="@+id/lore4"
                android:layout_toEndOf="@id/lore3" />
        </RadioGroup>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blessed"
            android:text="Blessed"
            android:layout_below="@id/loreGroup"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cursed"
            android:text="Cursed"
            android:layout_alignTop="@id/blessed"
            android:layout_toEndOf="@id/blessed" />
    </RelativeLayout>
</ScrollView>