<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/investigatorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="@string/loading" />

        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/investigatorName"
            android:text="@string/loading" />

        <TextView
            android:id="@+id/abilityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingTop="30dp"
            android:text="Ability:" />

        <TextView
            android:id="@+id/ability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/abilityLabel"
            android:text="@string/loading" />

        <TextView
            android:id="@+id/posFixedLabel"
            android:paddingTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ability"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Fixed Possessions:" />

        <TextView
            android:id="@+id/posFixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/posFixedLabel"
            android:text="@string/loading" />

        <TextView
            android:id="@+id/posRandomLabel"
            android:paddingTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/posFixed"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Random Possessions:" />

        <TextView
            android:id="@+id/posRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/posRandomLabel"
            android:text="@string/loading" />
    </RelativeLayout>
</ScrollView>